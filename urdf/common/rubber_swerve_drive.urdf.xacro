<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="rubber_swerve_drive"
                 params="prefix wheel_x_offset wheel_y_offset wheel_z_offset  connected_to">

        <link name="${prefix}_pivot">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://rm_description/meshes/common/rubber_swerve_pivot.stl"
                          scale="0.001 0.001 0.001"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="0.809394"/>
                <origin xyz="0.000185 -0.010126 0.008932" rpy="0 0 0"/>
                <inertia ixx="1.306e-3" ixy="1.6413356e-5" ixz="5.078835e-6" iyy="9.173e-4" iyz="-2.454e-4"
                         izz="1.182e-3"/>
            </inertial>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://rm_description/meshes/common/rubber_swerve_pivot.stl"
                          scale="0.001 0.001 0.001"/>
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}_pivot_joint" type="revolute">
            <axis xyz="0 0 1"/>
            <origin xyz="${wheel_x_offset} ${wheel_y_offset} ${wheel_z_offset}" rpy="0 0 0"/>
            <parent link="${connected_to}"/>
            <child link="${prefix}_pivot"/>
            <dynamics damping="0.0" friction="0.1"/>
            <limit effort="1.2" velocity="31" lower="-1e10" upper="1e10"/>
        </joint>


        <link name="${prefix}_wheel">
            <visual>
                <origin xyz="0 0. 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://rm_description/meshes/common/rubber_swerve_wheel.stl"
                          scale="0.001 0.001 0.001"/>
                </geometry>
            </visual>
            <inertial>
                <mass value="0.304793"/>
                <origin xyz="0.00682 0.000022 0.002575" rpy="0 0 0"/>
                <inertia ixx="3.491e-4" ixy="-1.39631e-7" ixz="-1.7938563e-5" iyy="2.386e-4" iyz="-1.90245e-7"
                         izz="2.147e-4"/>
            </inertial>
            <collision>
                <origin xyz="0 0 0" rpy="${pi/2.} 0 0"/>
                <geometry>
                    <cylinder radius="0.055" length="0.02"/>
                </geometry>
            </collision>
        </link>

        <joint name="${prefix}_wheel_joint" type="revolute">
            <axis xyz="0 1 0"/>
            <origin xyz="0 0 -0.06935" rpy="0 0 0"/>
            <parent link="${prefix}_pivot"/>
            <child link="${prefix}_wheel"/>
            <limit effort="2.2" velocity="68" lower="-1e10" upper="1e10"/>
            <dynamics damping="0.0" friction="0.05"/>
        </joint>

        <gazebo reference="${prefix}_wheel">
            <mu1 value="20"/>
            <mu2 value="20"/>
            <kp value="1000000.0"/>
            <kd value="100.0"/>
            <material>Gazebo/Black</material>
        </gazebo>
    </xacro:macro>

    <xacro:macro name="rubber_swerve_transmission" params="prefix wheel_reduction  pivot_offset">

        <transmission name="${prefix}_pivot_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="${prefix}_pivot_motor">
                <mechanicalReduction>-1</mechanicalReduction>
            </actuator>
            <joint name="${prefix}_pivot_joint">
                <offset>${pivot_offset}</offset>
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
        </transmission>

        <transmission name="${prefix}_wheel_trans">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="${prefix}_wheel_motor">
                <mechanicalReduction>${wheel_reduction}</mechanicalReduction>
            </actuator>
            <joint name="${prefix}_wheel_joint">
                <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
            </joint>
        </transmission>
    </xacro:macro>

</robot>
